---
import MainLayout from '../../../layouts/MainLayout.astro';
import { PrismaClient, Condition } from '@prisma/client';

const prisma = new PrismaClient();
const { id } = Astro.params;

const purchase = await prisma.purchase.findUnique({
  where: { id: Number(id) },
  include: {
    legoSet: true,
  },
});

if (!purchase) {
  return Astro.redirect('/achats');
}

const legoSets = await prisma.legoSet.findMany({
  orderBy: {
    name: 'asc',
  },
});
---

<MainLayout title={`Modifier l'achat - ${purchase.legoSet.name}`}>
  <div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold">Modifier l'achat</h1>
      <a
        href={`/achats/${id}`}
        class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded"
      >
        Retour
      </a>
    </div>

    <form action={`/api/purchases/${id}`} method="POST" class="max-w-2xl">
      <input type="hidden" name="_method" value="PUT" />
      <div class="grid gap-6">
        <div>
          <label for="legoSetId" class="block text-sm font-medium text-gray-700 mb-1">
            Set LEGO
          </label>
          <select
            id="legoSetId"
            name="legoSetId"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            {legoSets.map((set) => (
              <option value={set.id} selected={set.id === purchase.legoSetId}>
                {set.name}
              </option>
            ))}
          </select>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <label for="price" class="block text-sm font-medium text-gray-700 mb-1">
              Prix (€)
            </label>
            <input
              type="number"
              id="price"
              name="price"
              step="0.01"
              value={purchase.price}
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>

          <div>
            <label for="quantity" class="block text-sm font-medium text-gray-700 mb-1">
              Quantité
            </label>
            <input
              type="number"
              id="quantity"
              name="quantity"
              min="1"
              value={purchase.quantity}
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>
        </div>

        <div>
          <label for="condition" class="block text-sm font-medium text-gray-700 mb-1">
            État
          </label>
          <select
            id="condition"
            name="condition"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            <option value={Condition.NEW} selected={purchase.condition === Condition.NEW}>Neuf</option>
            <option value={Condition.NEW_SEALED} selected={purchase.condition === Condition.NEW_SEALED}>Neuf scellé</option>
            <option value={Condition.USED_COMPLETE} selected={purchase.condition === Condition.USED_COMPLETE}>Usage complet</option>
            <option value={Condition.USED_INCOMPLETE} selected={purchase.condition === Condition.USED_INCOMPLETE}>Usage incomplet</option>
            <option value={Condition.USED} selected={purchase.condition === Condition.USED}>Usage</option>
          </select>
        </div>

        <div>
          <label for="purchaseDate" class="block text-sm font-medium text-gray-700 mb-1">
            Date d'achat
          </label>
          <input
            type="date"
            id="purchaseDate"
            name="purchaseDate"
            value={new Date(purchase.purchaseDate).toISOString().split('T')[0]}
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <div>
          <label for="seller" class="block text-sm font-medium text-gray-700 mb-1">
            Vendeur
          </label>
          <input
            type="text"
            id="seller"
            name="seller"
            value={purchase.seller || ''}
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <div>
          <label for="notes" class="block text-sm font-medium text-gray-700 mb-1">
            Notes
          </label>
          <textarea
            id="notes"
            name="notes"
            rows="3"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          >{purchase.notes || ''}</textarea>
        </div>

        <div class="flex justify-end">
          <button
            type="submit"
            class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded"
          >
            Enregistrer les modifications
          </button>
        </div>
      </div>
    </form>
  </div>
</MainLayout> 