---
import MainLayout from '../../layouts/MainLayout.astro';
import { PrismaClient } from '@prisma/client';

const prisma = new PrismaClient();
const purchases = await prisma.purchase.findMany({
  include: {
    legoSet: true,
  },
  orderBy: {
    purchaseDate: 'desc',
  },
});
---

<MainLayout title="Mes achats">
  <div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold">Mes achats</h1>
      <a href="/achats/nouveau" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
        Ajouter un achat
      </a>
    </div>

    <div class="grid gap-6">
      {purchases.map((purchase) => (
        <div class="bg-white rounded-lg shadow p-6">
          <div class="flex justify-between items-start">
            <div>
              <h2 class="text-xl font-semibold">{purchase.legoSet.name}</h2>
              <p class="text-gray-600">Acheté le {new Date(purchase.purchaseDate).toLocaleDateString()}</p>
            </div>
            <div class="text-right">
              <p class="text-lg font-semibold">{purchase.price}€</p>
              <p class="text-gray-600">Quantité: {purchase.quantity}</p>
            </div>
          </div>
          <div class="mt-4">
            <p class="text-gray-600">État: {purchase.condition}</p>
            <p class="text-gray-600">Vendeur: {purchase.seller}</p>
            {purchase.notes && (
              <p class="text-gray-600 mt-2">Notes: {purchase.notes}</p>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</MainLayout> 