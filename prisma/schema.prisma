generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LegoSet {
  id          Int      @id @default(autoincrement())
  setNumber   String   @unique
  name        String
  theme       String
  year        Int
  pieces      Int?
  minifigs    Int?
  retailPrice Float?
  images      String[] @default([])
  status      SetStatus @default(ACTIVE)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  purchases   Purchase[]
  sales       Sale[]
  inventory   Inventory[]
}

model Purchase {
  id          Int      @id @default(autoincrement())
  legoSetId   Int
  legoSet     LegoSet  @relation(fields: [legoSetId], references: [id])
  price       Float
  quantity    Int      @default(1)
  condition   Condition
  purchaseDate DateTime
  seller      String?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Sale {
  id          Int      @id @default(autoincrement())
  legoSetId   Int
  legoSet     LegoSet  @relation(fields: [legoSetId], references: [id])
  price       Float
  quantity    Int      @default(1)
  condition   Condition
  saleDate    DateTime
  buyer       String?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Inventory {
  id          Int      @id @default(autoincrement())
  legoSetId   Int
  legoSet     LegoSet  @relation(fields: [legoSetId], references: [id])
  quantity    Int      @default(0)
  condition   Condition
  location    String?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum SetStatus {
  ACTIVE
  RETIRED
  DISCONTINUED
}

enum Condition {
  NEW
  USED
  NEW_SEALED
  USED_COMPLETE
  USED_INCOMPLETE
} 